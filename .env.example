# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Mom's Kidz"
NEXT_PUBLIC_APP_DESCRIPTION="Track, celebrate, and share your parenting journey"

# Database Configuration
# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret # Generate with: openssl rand -base64 32

# TikTok Configuration
NEXT_PUBLIC_TIKTOK_API_KEY=your_tiktok_api_key
NEXT_PUBLIC_TIKTOK_API_SECRET=your_tiktok_api_secret
NEXT_PUBLIC_TIKTOK_USER_ID=your_tiktok_user_id

# Facebook Configuration
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_FACEBOOK_PAGE_ID=your_facebook_page_id
NEXT_PUBLIC_FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Instagram Configuration
NEXT_PUBLIC_INSTAGRAM_API_KEY=your_instagram_api_key
NEXT_PUBLIC_INSTAGRAM_USERNAME=your_instagram_username

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# API Keys
NEWS_API_KEY=your_news_api_key



# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=true
NEXT_PUBLIC_ENABLE_RESEARCH_FEATURES=true

# Social Media API Endpoints
NEXT_PUBLIC_TIKTOK_API_ENDPOINT=https://open.tiktokapis.com/v2
NEXT_PUBLIC_FACEBOOK_API_ENDPOINT=https://graph.facebook.com/v13.0
NEXT_PUBLIC_INSTAGRAM_API_ENDPOINT=https://graph.instagram.com

# Social Media API Rate Limits
TIKTOK_RATE_LIMIT=1000 # Requests per day
FACEBOOK_RATE_LIMIT=200 # Requests per hour
INSTAGRAM_RATE_LIMIT=200 # Requests per hour

# Social Media Webhook Configuration (Optional)
TIKTOK_WEBHOOK_SECRET=your_tiktok_webhook_secret
FACEBOOK_WEBHOOK_SECRET=your_facebook_webhook_secret
INSTAGRAM_WEBHOOK_SECRET=your_instagram_webhook_secret

# Social Media OAuth Redirect URIs
NEXT_PUBLIC_TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/tiktok
NEXT_PUBLIC_FACEBOOK_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/callback/instagram

# Cache TTL Configuration (in seconds)
SOCIAL_FEED_CACHE_TTL=300 # 5 minutes
SOCIAL_STATS_CACHE_TTL=3600 # 1 hour
SOCIAL_ANALYTICS_CACHE_TTL=86400 # 24 hours

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SAMPLE_RATE=0.1 # Report 10% of errors

# Development Tools
DEBUG=false
DEBUG_SOCIAL_API=false # Enable detailed API logging

# Push Notifications
NEXT_PUBLIC_VAPID_KEY=your_vapid_key
DATABASE_URL=your_database_url

# Email Configuration (optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Analytics and Monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
SENTRY_DSN=your_sentry_dsn

# Cache Configuration (optional)
REDIS_URL=your_redis_url

# API Rate Limiting (optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
